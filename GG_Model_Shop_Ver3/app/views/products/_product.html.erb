<div class="look_nice">
  <div class="top">
    <%= link_to (image_tag product.image, :size => '125x130'), product_path(product.id) %><br/>
    <span class="p_name"><%= product.name %></span>
  </div>
  <div class="cap">
    <% if product.onsale == true %>
      <span class="sale">On Sale!</span><br/>
    <% end %>
    <span class="price">$<%= product.price.to_f %></span>
  </div>
  <div class="buy">
    <%= link_to 'BUY'%>
  </div>
</div>